<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <root>
      <appender-ref ref="Informations" />
      <appender-ref ref="Errors" />
    </root>
    <appender name="Informations" type="log4net.Appender.FileAppender">
      <file value="Logs\Informations.log" />
      <appendToFile value="true" />

      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %logger - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO"/>
        <param name="LevelMax" value="INFO"/>
      </filter>
    </appender>
    <appender name="Errors" type="log4net.Appender.FileAppender">
      <file value="Logs\Errors.log" />
      <appendToFile value="true" />

      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR"/>
        <param name="LevelMax" value="ERROR"/>
      </filter>
    </appender>
  </log4net>
  <appSettings>
    <!-- update these with your BotId, Microsoft App Id and your Microsoft App Password-->
    <add key="BotId" value="FamilyLotteryBot" />
    <add key="MicrosoftAppId" value="aa04f0aa-43a4-466f-b440-ea71f25e443f" />
    <add key="MicrosoftAppPassword" value="ZDKMLt90O1dGgBEi93bxsUL" />
  </appSettings>
  <!--
